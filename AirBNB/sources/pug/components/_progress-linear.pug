//- Progress Bar linear
	@param {object} data
	@param {string} data.title
	@param {number} data.value
mixin progress-linear( data )
	//Linear progress bar
	.progress-linear( data-duration= data.duration )&attributes( attributes )
		.progress-linear-header.h6.fw-bold.text-start
			p.progress-linear-title= data.title
			span.progress-linear-counter= data.value
		.progress-linear-body
			.progress-linear-bar
