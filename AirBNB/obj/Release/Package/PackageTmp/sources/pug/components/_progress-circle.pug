//- Circle progress bar
	@param {object} data
	@param {string} data.title
	@param {number} data.value
mixin progress-circle( data )
	//Circle progress bar
	.progress-circle&attributes( attributes )
		.progress-circle-block
			svg.progress-circle-bar( x='0', y='0', width='170', height='170', viewbox='0 0 170 170' )
				circle.progress-circle-bg( cx=85, cy=85, r=82 )
				circle.progress-circle-fg.clipped( cx=85, cy=85, r=82 )
			.progress-circle-counter= data.value
		if ( data.title )
			p.progress-circle-title.text-center.fw-bold.h6= data.title
